<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="@dimen/margin_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/margin_1"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/nameofretru"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ordertype"
                        android:textSize="@dimen/very_small_text_size"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textColor="@color/black_color_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/very_small_text_size"
                        android:gravity="center"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textColor="@color/black_color_light"
                        android:text="Total Amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/orderamot"
                        android:textSize="@dimen/normal_text_size"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textColor="@color/black_color_light"
                        android:text="74"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/creteon"
                android:textSize="@dimen/very_small_text_size"
                android:fontFamily="@font/redhatdisplay_regular"
                android:textColor="@color/black_color_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/payment"
                android:textSize="@dimen/very_small_text_size"
                android:fontFamily="@font/redhatdisplay_regular"
                android:textColor="@color/black_color_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/locationname"
                android:textSize="@dimen/very_small_text_size"
                android:fontFamily="@font/redhatdisplay_regular"
                android:textColor="@color/black_color_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderstatus"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textColor="@color/colorYellow"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:id="@+id/trackorder"
                    android:background="@drawable/button_rec_shape_gradian"
                    android:textSize="@dimen/very_small_text_size"
                    android:layout_weight="1"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textColor="@color/white_color"
                    android:text="Track Order"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/margin_6"/>
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</layout>