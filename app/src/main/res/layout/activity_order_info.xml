<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="orderInfoViewModel"
            type="com.exchange.user.module.order_info_module.OrderInfoViewModel" />
    </data>

    <RelativeLayout
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/viewLay"
            android:background="@color/white_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="@dimen/margin_02"
                android:id="@+id/titel"
                app:cardBackgroundColor="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/shadow"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:onClick="@{()-> orderInfoViewModel.onBack()}"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:id="@+id/goback"
                        android:layout_margin="@dimen/margin_2"
                        android:src="@drawable/ic_back_arrow_black"
                        android:layout_width="@dimen/margin_6"
                        android:layout_height="@dimen/margin_7"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:padding="@dimen/margin_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Order Details"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/medium_text_size">

                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:scaleType="fitXY"
                                android:id="@+id/headerbackgroundImage"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_20"/>

                            <ImageView
                                android:id="@+id/headerImage"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_20"/>

                        </RelativeLayout>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:hint="-----------------------"
                            android:layout_marginTop="@dimen/margin_1"
                            android:layout_width="match_parent"
                            android:id="@+id/restroname"
                            android:textSize="@dimen/normal_text_size"
                            android:textColor="@color/black_color"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:id="@+id/restroaddress"
                            android:hint="-----------------------"
                            android:textSize="@dimen/very_small_text_size"
                            android:textColor="@color/black_color_light"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_margin="@dimen/margin_1"
                            android:layout_width="match_parent"
                            android:background="@color/gray_light"
                            android:layout_height="1dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_marginEnd="@dimen/margin_1"
                                android:layout_toStartOf="@+id/reprderbutton"
                                android:id="@+id/orderno"
                                android:textStyle="bold"
                                android:hint="-----------------------"
                                android:textSize="@dimen/normal_text_size"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_below="@+id/orderno"
                                android:layout_marginEnd="@dimen/margin_1"
                                android:layout_toStartOf="@+id/reprderbutton"
                                android:id="@+id/orderdate"
                                android:hint="-----------------------"
                                android:textSize="@dimen/small_text_size"
                                android:textColor="@color/black_color"
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:onClick="@{()-> orderInfoViewModel.reOrder()}"
                                android:layout_marginEnd="@dimen/margin_1"
                                android:layout_centerVertical="true"
                                android:id="@+id/reprderbutton"
                                android:layout_alignParentEnd="true"
                                android:paddingRight="@dimen/margin_3"
                                android:paddingLeft="@dimen/margin_3"
                                android:background="@drawable/button_shape_yellow"
                                android:textSize="@dimen/small_text_size"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:textColor="@color/white_color"
                                android:text="Re-Order"
                                android:layout_height="@dimen/margin_8"/>
                        </RelativeLayout>

                        <View
                            android:layout_margin="@dimen/margin_1"
                            android:layout_width="match_parent"
                            android:background="@color/gray_light"
                            android:layout_height="1dp"/>
                        <RelativeLayout
                            android:id="@+id/countLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:textSize="@dimen/small_text_size"
                                android:textColor="@color/black_color"
                                android:textStyle="bold"
                                android:text="Items"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/itemsCount"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:textSize="@dimen/small_text_size"
                                android:textColor="@color/black_color_light"
                                android:text=" 4 Items"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:id="@+id/orderitems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/priceCalcuLay"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="@dimen/margin_1"
                            android:paddingRight="@dimen/margin_1"
                            android:orientation="vertical"
                            android:background="@color/white_color"
                            android:layout_height="wrap_content">


                            <LinearLayout android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:textColor="@color/black_color"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="@string/item_total"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textColor="@color/black_color"
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:id="@+id/itemstotel"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:textColor="@color/black_color"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="@string/tax_applied"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textColor="@color/black_color"
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:id="@+id/gstapplied"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textColor="@color/black_color"
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="Tip Added"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textColor="@color/black_color"
                                    android:layout_width="0dp"
                                    android:id="@+id/tipadd"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/couponlay"
                                android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textColor="@color/color_green"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="Coupon Discount"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:id="@+id/copendiscount"
                                    android:textColor="@color/color_green"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/discountlay"
                                android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textColor="@color/color_green"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="Discount"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:id="@+id/discount"
                                    android:textColor="@color/color_green"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/discountlay2"
                                android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView

                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textColor="@color/color_green"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="Second Discount"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:id="@+id/discount2"
                                    android:textColor="@color/color_green"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>


                            <LinearLayout android:layout_width="match_parent"
                                android:padding="@dimen/margin_01"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:textColor="@color/black_color"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="Delivery Charges"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:id="@+id/deliverycharge"
                                    android:textColor="@color/black_color"
                                    android:gravity="end"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_1"
                            android:background="@color/white_color"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:textStyle="bold"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/normal_text_size"
                                android:text="Grand Total"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:textStyle="bold"
                                android:textColor="@color/black_color"
                                android:layout_width="0dp"
                                android:fontFamily="@font/redhatdisplay_regular"
                                android:id="@+id/gradtotle"
                                android:gravity="end"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_2"
                        android:padding="@dimen/margin_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:textSize="@dimen/normal_text_size"
                            android:textColor="@color/black_color"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:layout_marginBottom="@dimen/margin_2"
                            android:text="Actions :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:onClick="@{()-> orderInfoViewModel.getHelp()}"
                            android:textAllCaps="false"
                            android:layout_marginBottom="@dimen/margin_1"
                            android:text="Get Help"
                            android:textStyle="bold"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:background="@drawable/button_rec_shape_gradian"
                            android:textColor="@color/white_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <androidx.appcompat.widget.AppCompatButton
                            android:onClick="@{()-> orderInfoViewModel.trackingHistory()}"
                            android:textAllCaps="false"
                            android:layout_marginBottom="@dimen/margin_1"
                            android:text="Tracking History"
                            android:textStyle="bold"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:background="@drawable/button_shape_yellow"
                            android:textColor="@color/white_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:visibility="gone"
                            android:onClick="@{()-> orderInfoViewModel.getEReceipt()}"
                            android:textAllCaps="false"
                            android:layout_marginBottom="@dimen/margin_1"
                            android:text="Get eReceipt"
                            android:textStyle="bold"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:background="@drawable/button_shape_yellow"
                            android:textColor="@color/white_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/margin_2"
                        android:orientation="vertical"
                        android:id="@+id/driverBioLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="@dimen/margin_2"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="Your Driver"
                            android:textSize="@dimen/large_text_size"
                            android:gravity="center_vertical"
                            android:textColor="@color/black_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:id="@+id/driverContactLay"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_weight="8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/margin_13"
                                    android:id="@+id/restroimage2"
                                    android:src="@drawable/fonzie_the_burger"
                                    android:layout_height="@dimen/margin_13"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/driverName"
                                    android:layout_marginStart="@dimen/margin_1"
                                    android:textSize="@dimen/normal_text_size"
                                    android:textColor="@color/black_color"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:onClick="@{()-> orderInfoViewModel.callToDriver()}"
                                    android:id="@+id/phonecall"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparent_color"
                                    android:elevation="@dimen/margin_3"
                                    android:src="@drawable/ic_callbutton" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:textStyle="bold"
                            android:text="Bio"
                            android:textSize="@dimen/normal_text_size"
                            android:gravity="center_vertical"
                            android:textColor="@color/black_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginBottom="@dimen/margin_4"
                            android:id="@+id/driverBio"
                            android:textSize="@dimen/small_text_size"
                            android:gravity="center_vertical"
                            android:textColor="@color/black_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_margin="@dimen/margin_1"
                                        android:src="@drawable/quick_efficence"
                                        android:layout_width="@dimen/margin_8"
                                        android:layout_height="@dimen/margin_8"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/small_text_size"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/redhatdisplay_regular"
                                        android:text="Quick &amp;\nEfficient"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/circle_mark"
                                    android:gravity="center"
                                    android:layout_width="@dimen/margin_4"
                                    android:layout_height="@dimen/margin_4">

                                    <TextView
                                        android:id="@+id/quickEfficency"
                                        android:textColor="@color/white_color"
                                        android:text="3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_margin="@dimen/margin_1"
                                        android:src="@drawable/perfect_hand_off"
                                        android:layout_width="@dimen/margin_8"
                                        android:layout_height="@dimen/margin_8"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/small_text_size"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/redhatdisplay_regular"
                                        android:text="Prefect\nHandoff"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/circle_mark"
                                    android:gravity="center"
                                    android:layout_width="@dimen/margin_4"
                                    android:layout_height="@dimen/margin_4">

                                    <TextView
                                        android:id="@+id/perfectHandOff"
                                        android:textColor="@color/white_color"
                                        android:text="3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_margin="@dimen/margin_1"
                                        android:src="@drawable/delivery_with_care"
                                        android:layout_width="@dimen/margin_8"
                                        android:layout_height="@dimen/margin_8"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/small_text_size"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/redhatdisplay_regular"
                                        android:text="Delivery\nwith care"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/circle_mark"
                                    android:gravity="center"
                                    android:layout_width="@dimen/margin_4"
                                    android:layout_height="@dimen/margin_4">

                                    <TextView
                                        android:id="@+id/deliveryWithCare"
                                        android:textColor="@color/white_color"
                                        android:text="3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_margin="@dimen/margin_1"
                                        android:src="@drawable/friendly_service"
                                        android:layout_width="@dimen/margin_8"
                                        android:layout_height="@dimen/margin_8"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/small_text_size"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/redhatdisplay_regular"
                                        android:text="Friendly\nservice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/circle_mark"
                                    android:gravity="center"
                                    android:layout_width="@dimen/margin_4"
                                    android:layout_height="@dimen/margin_4">

                                    <TextView
                                        android:id="@+id/friendlyServiceCount"
                                        android:textColor="@color/white_color"
                                        android:text="3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                </LinearLayout>

                            </RelativeLayout>



                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:layout_margin="@dimen/margin_1"
                        android:layout_width="match_parent"
                        android:background="@color/gray_light"
                        android:layout_height="1dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginBottom="@dimen/margin_7"
                        android:layout_marginTop="@dimen/margin_7"
                        android:visibility="gone"
                        android:id="@+id/feedback"
                        android:text="Give Feedback"
                        android:textColor="@color/white_color"
                        android:background="@drawable/button_rec_shape_gradian"
                        android:textAllCaps="true"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_8"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/progresslay"
            android:gravity="center"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                app:lottie_fileName="food.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

        </LinearLayout>

    </RelativeLayout>
</layout>