<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_margin="@dimen/margin_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/rect_button_shape_simple"
                android:gravity="center"
                android:id="@+id/data_view"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/dl_state_id_wh">

                <LinearLayout
                    android:background="@drawable/rect_button_shape_simple"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:elevation="@dimen/margin_2"
                        android:id="@+id/image"
                        android:layout_marginTop="@dimen/margin_2"
                        android:layout_width="@dimen/dl_state_id_wh"
                        android:layout_height="@dimen/dl_state_id_wh" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:elevation="@dimen/margin_2"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:id="@+id/name"
                        android:layout_marginLeft="@dimen/margin_1"
                        android:layout_marginRight="@dimen/margin_1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="South Koria"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="@dimen/margin_2"
                        android:layout_marginBottom="@dimen/margin_2"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/selectedic"
            android:background="@color/transparent_color"
            android:elevation="@dimen/margin_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_2"
            android:src="@drawable/ic_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</layout>