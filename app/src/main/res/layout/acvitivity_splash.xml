<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="spleshViewModel"
            type="com.exchange.user.module.splesh_module.SpleshViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_centerInParent="true"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_width="@dimen/navigation_width"
            android:layout_height="@dimen/navigation_width"/>

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="@{()->spleshViewModel.next()}"
            android:elevation="@dimen/margin_1"
            android:textStyle="bold"
            android:textColor="@color/white_color"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/next"
            android:fontFamily="@font/redhatdisplay_regular"
            android:background="@drawable/button_shape_gradian"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</layout>