<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_2"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="@dimen/margin_3"
                android:layout_width="@dimen/margin_5"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_maps_and_flags_blue"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2"
                android:layout_marginLeft="@dimen/margin_2"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_details"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPlaceDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_details"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>