<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="resturentViewModel"
            type="com.exchange.user.module.restaurent_module.ResturentViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_above="@+id/cordinate"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true">

                <RelativeLayout
                    android:elevation="@dimen/margin_2"
                    android:layout_width="match_parent"
                    android:background="@color/white_color"
                    android:id="@+id/container"
                    android:layout_height="?attr/actionBarSize">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginStart="@dimen/margin_1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:id="@+id/back"
                        android:onClick="@{()-> resturentViewModel.back()}"
                        android:src="@drawable/ic_back_arrow_black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:ignore="ContentDescription"
                        android:focusable="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:id="@+id/title"
                        android:layout_toEndOf="@+id/back"
                        android:layout_toStartOf="@+id/infolay"
                        android:layout_marginEnd="@dimen/margin_1"
                        android:layout_marginStart="@dimen/margin_2"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:textSize="@dimen/medium_text_size"
                        android:textColor="@color/black_color"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="RtlHardcoded" />

                    <LinearLayout
                        android:elevation="@dimen/margin_1"
                        android:id="@+id/infolay"
                        android:layout_marginEnd="@dimen/margin_03"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:onClick="@{()->resturentViewModel.moreAbout()}"
                        android:layout_width="@dimen/margin_9"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:onClick="@{()->resturentViewModel.moreAbout()}"
                            android:layout_margin="@dimen/margin_1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:gravity="bottom"
                            android:id="@+id/aboutimage"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_marginStart="@dimen/margin_1"
                        android:visibility="gone"
                        android:id="@+id/serchview"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:longClickable="false"
                            android:layout_toStartOf="@+id/closeserch"
                            android:textColor="@color/black_color"
                            android:id="@+id/searchItems"
                            android:fontFamily="@font/redhatdisplay_regular"
                            android:drawablePadding="@dimen/margin_04"
                            android:hint="Search"
                            android:singleLine="true"
                            android:textColorHint="@color/black_color"
                            android:drawableStart="@drawable/ic_search_black"
                            android:background="@drawable/edit_underline"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/closeserch"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:onClick="@{()-> resturentViewModel.closeSearchView()}"
                            android:layout_marginEnd="@dimen/margin_01"
                            android:src="@drawable/ic_close_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:focusable="true" />

                    </RelativeLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:visibility="gone"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:id="@+id/searchicon"
                        android:layout_alignParentEnd="true"
                        android:onClick="@{()-> resturentViewModel.openSearchView()}"
                        android:layout_marginEnd="@dimen/margin_1"
                        android:src="@drawable/ic_search_black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="true" />

                </RelativeLayout>

            </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_marginTop="@dimen/margin_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        android:visibility="gone"
                        android:id="@+id/resturentdetaillay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:id="@+id/about"
                                android:padding="@dimen/margin_03"
                                android:gravity="top"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/restrologo"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/margin_18"
                                    android:scaleType="center"
                                    android:layout_height="@dimen/margin_18"/>
                                <LinearLayout android:layout_width="0dp"
                                    android:padding="1dp"
                                    android:gravity="bottom"
                                    android:layout_marginStart="@dimen/margin_04"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <LinearLayout android:layout_width="match_parent"
                                        android:gravity="top"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <TextView android:layout_width="0dp"
                                            android:layout_weight="3"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/redhatdisplay_regular"
                                            android:id="@+id/name"
                                            android:textSize="@dimen/normal_text_size"
                                            android:textColor="@color/colorAccent"
                                            android:layout_height="wrap_content"/>

                                        <LinearLayout
                                            android:visibility="gone"
                                            android:id="@+id/ratelay"
                                            android:layout_marginEnd="@dimen/margin_03"
                                            android:gravity="center"
                                            android:paddingRight="@dimen/margin_1"
                                            android:paddingLeft="@dimen/margin_1"
                                            android:background="@drawable/button_shape_blue_2"
                                            android:orientation="horizontal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:textSize="@dimen/very_small_text_size"
                                                android:gravity="center"
                                                android:text="4.66"
                                                android:id="@+id/rateing"
                                                android:drawablePadding="@dimen/margin_01"
                                                android:textColor="@color/white_color"
                                                android:layout_height="@dimen/margin_4"/>

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:src="@drawable/ic_star"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:paddingTop="@dimen/margin_02"
                                        android:paddingBottom="@dimen/margin_02"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <LinearLayout android:layout_width="0dp"
                                            android:layout_weight="2"
                                            android:layout_height="wrap_content">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:id="@+id/discountlay"
                                                android:padding="@dimen/margin_03"
                                                android:paddingEnd="@dimen/margin_1"
                                                android:background="@drawable/button_shape_yellow_second"
                                                android:gravity="center_vertical"
                                                android:orientation="horizontal"
                                                android:layout_height="wrap_content"
                                                tools:ignore="RtlSymmetry">

                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Save "
                                                    android:textColor="@color/white_color"
                                                    android:textSize="@dimen/very_small_text_size" />

                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:layout_width="wrap_content"
                                                    android:textColor="@color/white_color"
                                                    android:textSize="@dimen/very_small_text_size"
                                                    android:id="@+id/discount"
                                                    android:layout_height="wrap_content"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:visibility="gone"
                                            android:onClick="@{()->resturentViewModel.shareRestaurant()}"
                                            android:layout_gravity="right"
                                            android:layout_width="wrap_content"
                                            android:drawablePadding="@dimen/margin_1"
                                            android:gravity="right"
                                            android:text="Share"
                                            android:fontFamily="@font/redhatdisplay_regular"
                                            android:textSize="@dimen/small_text_size"
                                            android:id="@+id/share"
                                            android:drawableStart="@drawable/ic_share"
                                            android:textColor="@color/colorAccent"
                                            android:layout_height="match_parent"
                                            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_weight="4"
                                            android:layout_width="0dp"
                                            android:layout_gravity="bottom"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:layout_height="wrap_content">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:elevation="@dimen/margin_1"
                                                android:layout_width="wrap_content"
                                                android:gravity="bottom"
                                                android:id="@+id/restroimageopen"
                                                android:layout_height="wrap_content"/>

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:layout_width="wrap_content"
                                                android:textAllCaps="true"
                                                android:id="@+id/curentOpenStatus"
                                                android:gravity="center_vertical"
                                                android:drawablePadding="@dimen/margin_1"
                                                android:fontFamily="@font/redhatdisplay_regular"
                                                android:textSize="@dimen/very_small_text_size"
                                                android:layout_marginStart="@dimen/margin_04"
                                                android:textColor="@color/dark_gray"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>


                                    </LinearLayout>



                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:scaleType="fitXY"
                                        android:id="@+id/headerbackgroundImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/margin_20"/>

                                    <ImageView
                                        android:id="@+id/headerImage"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/margin_20"/>

                                </RelativeLayout>



                                <LinearLayout
                                    android:orientation="vertical"
                                    android:background="@color/gray_light"
                                    android:layout_marginTop="@dimen/margin_02"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textStyle="bold"
                                        android:textAllCaps="true"
                                        android:id="@+id/openandCloseTime"
                                        android:textColor="@color/black_color"
                                        android:padding="@dimen/margin_03"
                                        android:gravity="center"
                                        android:textSize="@dimen/normal_text_size"
                                        android:fontFamily="@font/sans_serif_regular"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:textStyle="bold"
                                        android:id="@+id/discountMessage"
                                        android:textColor="@color/black_color"
                                        android:padding="@dimen/margin_1"
                                        android:gravity="center"
                                        android:textSize="@dimen/normal_text_size"
                                        android:fontFamily="@font/sans_serif_regular"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/expand_option"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <WebView
                                    android:id="@+id/moreabout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textStyle="bold"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:text="@string/address_collem"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/address"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_03"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textStyle="bold"
                                        android:drawablePadding="@dimen/margin_1"
                                        android:drawableStart="@drawable/ic_clipart4271320"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:text="@string/tel_colom"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tellno"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_03"
                                    android:id="@+id/picuptimelay"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textStyle="bold"
                                        android:drawablePadding="@dimen/margin_1"
                                        android:drawableStart="@drawable/ic_delivery_man"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:text="@string/pickup_col"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:gravity="center_vertical"
                                        android:id="@+id/picuptime"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/margin_03"
                                    android:id="@+id/deliveytimelay"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:textStyle="bold"
                                        android:drawablePadding="@dimen/margin_1"
                                        android:drawableStart="@drawable/ic_delivery"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:text="@string/delivery_col"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:gravity="center_vertical"
                                        android:id="@+id/deliverytime"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="@dimen/margin_1"
                                        android:layout_marginBottom="@dimen/margin_1"
                                        android:textStyle="bold"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:text="@string/service_acceptable"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <LinearLayout
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:gravity="center"
                                            android:padding="@dimen/margin_1"
                                            android:background="@drawable/shape_stock"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent">
                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:text="@string/name"
                                                android:padding="@dimen/margin_01"
                                                android:textStyle="bold"
                                                android:textColor="@color/black_color"
                                                android:textSize="@dimen/small_text_size"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:gravity="center"
                                            android:padding="@dimen/margin_1"
                                            android:background="@drawable/shape_stock"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent">

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:text="@string/available"
                                                android:padding="@dimen/margin_01"
                                                android:textStyle="bold"
                                                android:textColor="@color/black_color"
                                                android:textSize="@dimen/small_text_size"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:gravity="center"
                                            android:padding="@dimen/margin_1"
                                            android:background="@drawable/shape_stock"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent">

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:text="@string/min_order"
                                                android:id="@+id/minorder"
                                                android:padding="@dimen/margin_01"
                                                android:textStyle="bold"
                                                android:textColor="@color/black_color"
                                                android:textSize="@dimen/small_text_size"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:gravity="center"
                                            android:padding="@dimen/margin_1"
                                            android:background="@drawable/shape_stock"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent">

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:text="@string/min_charge"
                                                android:id="@+id/minCharge"
                                                android:padding="@dimen/margin_01"
                                                android:textStyle="bold"
                                                android:textColor="@color/black_color"
                                                android:textSize="@dimen/small_text_size"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:gravity="center"
                                            android:padding="@dimen/margin_1"
                                            android:background="@drawable/shape_stock"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent">

                                            <androidx.appcompat.widget.AppCompatTextView
                                                android:text="@string/ready_in"
                                                android:padding="@dimen/margin_01"
                                                android:textStyle="bold"
                                                android:textColor="@color/black_color"
                                                android:textSize="@dimen/small_text_size"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:id="@+id/aboutservicerecy"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="@dimen/margin_1"
                                        android:layout_marginBottom="@dimen/margin_1"
                                        android:textStyle="bold"
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:text="@string/payment_acceptable"
                                        android:textSize="@dimen/small_text_size"
                                        android:textColor="@color/black_color"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:layout_marginRight="@dimen/margin_1"
                                        android:layout_marginLeft="@dimen/margin_1"
                                        app:spanCount="5"
                                        android:id="@+id/aboutpaymentrecy"
                                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:id="@+id/animation"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_3"
                        android:layout_marginRight="@dimen/margin_3"
                        android:layout_margin="@dimen/margin_3"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="@dimen/profile_outside_width"
                            android:layout_height="@dimen/profile_outside_width"
                            app:lottie_fileName="food.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:fontFamily="@font/allert"
                            android:textSize="@dimen/very_small_text_size"
                            android:textColor="@color/black_color"
                            android:gravity="center"
                            android:text="@string/please_wait_while_your_nmenu_is_loading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layoutAnimation="@anim/layout_animation_fall_down"
                        android:id="@+id/menurecycle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>

             </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:visibility="gone"
            android:padding="@dimen/margin_01"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:id="@+id/cordinate"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout android:layout_width="0dp"
                android:padding="@dimen/margin_1"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/noofItems"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin_1"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textSize="@dimen/small_text_size"
                    android:text="0 items"
                    android:textColor="@color/white_color"
                    android:layout_height="wrap_content"/>


                <View android:layout_width="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_color"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/profile_outside_width"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:id="@+id/totleamount"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin_1"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textSize="@dimen/medium_text_size"
                    android:textColorHint="@color/white_color"
                    android:hint="â‚¹ 10"
                    android:textColor="@color/white_color"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:gravity="center"

                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textSize="@dimen/very_small_text_size"
                    android:text="Plus\nTaxes"
                    android:textColor="@color/white_color"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/totelcontener"
                android:layout_width="0dp"
                android:gravity="right|center_vertical"
                android:padding="@dimen/margin_1"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:visibility="gone"
                    android:layout_margin="@dimen/margin_3"
                    android:id="@+id/animation_view"
                    android:layout_width="@dimen/xlarge_margin"
                    android:layout_height="@dimen/xlarge_margin"
                    app:lottie_fileName="loading.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnViewCart"
                    android:background="@color/colorPrimary"
                    android:onClick="@{()-> resturentViewModel.GoToCart()}"
                    android:layout_width="match_parent"
                    android:textAllCaps="true"
                    android:drawablePadding="@dimen/margin_2"
                    android:drawableEnd="@drawable/ic_forward_arrow_white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textSize="@dimen/small_text_size"
                    android:text="@string/view_cart"
                    android:textColor="@color/white_color"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>