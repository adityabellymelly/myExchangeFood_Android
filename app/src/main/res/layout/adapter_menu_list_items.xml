<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/margin_1"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_03"
        android:elevation="@dimen/margin_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/imagecontainer"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_margin="@dimen/margin_01"
                        android:layout_width="@dimen/margin_16"
                        android:id="@+id/itemImage"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/margin_15"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="top"
                    android:layout_width="0dip"
                    android:layout_marginStart="@dimen/margin_03"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <com.rey.material.widget.RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_toStartOf="@+id/container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    android:textColor="@color/black_color_light"
                                    android:id="@+id/itemsName"
                                    android:textSize="@dimen/normal_text_size"
                                    android:layout_height="wrap_content"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:visibility="gone"
                                        android:layout_width="@dimen/margin_3"
                                        android:layout_gravity="top"
                                        android:id="@+id/vegIcon1"
                                        android:layout_margin="@dimen/margin_01"
                                        android:layout_height="@dimen/margin_2"
                                        tools:ignore="TooDeepLayout" />

                                    <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/margin_3"
                                        android:layout_gravity="top"
                                        android:visibility="gone"
                                        android:id="@+id/vegIcon2"
                                        android:layout_margin="@dimen/margin_01"
                                        android:layout_height="@dimen/margin_2"/>

                                    <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/margin_3"
                                        android:layout_gravity="top"
                                        android:visibility="gone"
                                        android:id="@+id/vegIcon3"
                                        android:layout_margin="@dimen/margin_01"
                                        android:layout_height="@dimen/margin_2"/>

                                    <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/margin_3"
                                        android:layout_gravity="top"
                                        android:visibility="gone"
                                        android:id="@+id/vegIcon4"
                                        android:layout_margin="@dimen/margin_01"
                                        android:layout_height="@dimen/margin_2"/>

                                </LinearLayout>

                            </LinearLayout>


                            <RelativeLayout android:layout_width="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:visibility="gone"
                                    android:id="@+id/price"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="200"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:id="@+id/actualprice"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/normal_text_size"
                                    android:layout_marginTop="@dimen/margin_02"
                                    android:layout_height="wrap_content"/>



                            </RelativeLayout>




                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:padding="@dimen/margin_1"
                            android:id="@+id/container"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/addItems"
                                android:background="@drawable/shape_gray_stoke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" tools:ignore="UselessParent">


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/add"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:paddingStart="@dimen/margin_1"
                                    android:gravity="center"
                                    android:text="Add"
                                    tools:ignore="RtlSymmetry" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_margin="@dimen/margin_04"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/circle_mark"
                                    android:src="@drawable/ic_add" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/countItems"
                                android:background="@drawable/shape_gray_stoke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" tools:ignore="UselessParent">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_margin="@dimen/margin_04"
                                    android:id="@+id/Quality_decreasee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/circle_mark"
                                    android:padding="1dp"
                                    android:src="@drawable/ic_remove" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/quantity_count"
                                    android:layout_width="41dp"
                                    android:layout_height="35dp"
                                    android:fontFamily="@font/redhatdisplay_regular"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:gravity="center"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_margin="@dimen/margin_04"
                                    android:id="@+id/Quantity_incressed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/circle_mark"
                                    android:src="@drawable/ic_add" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.rey.material.widget.RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/discres"
                        android:ellipsize="end"
                        android:layout_marginBottom="@dimen/margin_03"
                        android:layout_width="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textSize="@dimen/very_small_text_size"
                        android:layout_marginTop="@dimen/margin_03"
                        android:layout_height="wrap_content"/>

                    <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:visibility="gone"
                        android:id="@+id/expanddiscreption"
                        android:orientation="vertical"
                        app:ael_duration="500"
                        app:ael_expanded ="true"
                        app:ael_interpolator="accelerateDecelerate"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/margin_1"
            android:background="@color/gray_light"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>