<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_color">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/closse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_button_shape_simple"
            android:elevation="@dimen/margin_1"
            android:padding="@dimen/margin_1"
            android:src="@drawable/ic_close_white_24dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/margin_3"
            android:background="@drawable/shape_with_white"
            android:padding="@dimen/margin_2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderno"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/margin_2"
                android:fontFamily="@font/redhatdisplay_regular"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center"
                android:textColor="@color/black_color"
                android:padding="@dimen/margin_2"
                android:fontFamily="@font/redhatdisplay_regular"
                android:textStyle="bold"
                android:text="@string/help_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/calltoreturent"
                    android:layout_margin="@dimen/margin_1"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/button_rec_shape_gradian_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_margin="@dimen/margin_3"
                            android:src="@drawable/ic_telephone_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/margin_1"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textColor="@color/black_color"
                        android:text="Call\nRestaurant"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/emailrestuent"
                    android:layout_margin="@dimen/margin_1"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/button_rec_shape_gradian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_margin="@dimen/margin_3"
                            android:src="@drawable/ic_email_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/margin_1"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/redhatdisplay_regular"
                        android:textColor="@color/black_color"
                        android:text="E-mail\nRestaurant"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

</layout>