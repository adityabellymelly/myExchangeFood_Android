<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/gray_light">

    <item android:id="@android:id/mask">
        <shape
            android:width="2dp"
            android:shape="rectangle">
            <solid android:color="@color/gray_light" />
        </shape>
    </item>


    <item android:id="@android:id/background">

        <shape  android:shape="rectangle" android:width="2dp">
            <gradient android:endColor="@color/gray_light" android:startColor="@color/gray_light"/>
            <stroke android:color="@color/gray_light" android:width="0.3dp"/>
            <corners android:radius="@dimen/margin_03"/>
        </shape>
    </item>

</ripple>
