<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/gray">

    <item android:id="@android:id/mask">
        <shape android:shape="oval" android:width="2dp">
            <solid android:color="@color/white_color"/>
            <size android:width="@dimen/margin_4" android:height="@dimen/margin_4"/>

        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape  android:shape="oval" android:width="2dp">
            <gradient android:endColor="@color/color_red"
                android:startColor="@color/color_red"
                android:centerColor="@color/color_red"/>
            <size android:width="@dimen/margin_4" android:height="@dimen/margin_4"/>
        </shape>
    </item>
</ripple>