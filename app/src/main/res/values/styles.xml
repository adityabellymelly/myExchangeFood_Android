    <style name="SignInTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:editTextStyle">@style/TStyle</item>
    </style>

    <style name="TStyle" parent="@android:style/Widget.EditText" >
        <item name="android:textSelectHandle">@drawable/ic_empty</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_empty</item>
        <item name="android:textSelectHandleRight">@drawable/ic_empty</item>
    </style>

    <style name="VarifyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="SheetDialog" parent="Material.App.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <!--        <item name="android:windowIsFloating">true</item>-->
    </style>

    <style name="expand">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:maxLines">2</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/black_color</item>

    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="queryBackground">@color/white_color</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

        <!-- Gets rid of the "underline" in the text -->
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@drawable/ic_search</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Search</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/transparent_color</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:queryHint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="queryHint">Search</item>
        <item name="android:textColorPrimary">@color/color_green</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/color_green</item>
    </style>

    <style name="AppTheme.CardTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white_color</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="colorAccent">@color/white_color</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="android:background">@color/colorPrimary</item>
        <item name="editTextStyle">@style/EditTextOverride</item>
        <item name="android:editTextStyle">@style/EditTextOverride</item>
    </style>

    <style name="EditTextOverride" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textColorHint">#00FF00</item>
    </style>


</resources>
